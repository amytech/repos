<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_info_item"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/diablo_info_image"
        android:layout_width="@dimen/size_info_image"
        android:layout_height="@dimen/size_info_image"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/diablo_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_base_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diablo_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:text="@string/app_name"
            android:textColor="@color/color_base_body"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>