<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_topbar"
    android:background="@color/color_bg_topbar" >

    <ImageView
        android:id="@+id/topbar_icon"
        android:layout_width="@dimen/height_topbar"
        android:layout_height="@dimen/height_topbar"
        android:layout_alignParentLeft="true"
        android:src="@drawable/seekbar_thumb"
        tools:ignore="RtlHardcoded,ContentDescription" />

    <TextView
        android:id="@+id/topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@+id/topbar_icon"
        android:text="@string/exit_press_again"
        android:textColor="@color/color_font_text"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>