<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Default_Seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:progressDrawable">@drawable/layer_seekbar</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Default_Button">
        <item name="android:background">@drawable/selector_default_button</item>
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">@dimen/margin_small_more</item>
        <item name="android:paddingBottom">@dimen/margin_small_more</item>
        <item name="android:paddingLeft">@dimen/margin_normal</item>
        <item name="android:paddingRight">@dimen/margin_normal</item>
    </style>

    <style name="Default_EditText">
        <item name="android:background">@drawable/default_edit_bg</item>
        <item name="android:textColor">@color/color_font_spec</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">@dimen/margin_small_more</item>
    </style>

</resources>