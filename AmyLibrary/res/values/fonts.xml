<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 黑色splash文字 -->
    <style name="font_splash_black">
        <item name="android:textColor">@color/color_bg_drawer</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">@color/color_font_spec</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <!-- 白色splash文字 -->
    <style name="font_splash_white">
        <item name="android:textColor">@color/color_font_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">@color/color_font_spec</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <!-- 应用于标题区域 -->
    <style name="font_title">
        <item name="android:textColor">@color/color_font_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 应用于正文区域 -->
    <style name="font_body">
        <item name="android:textColor">@color/color_font_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 应用于正文区域 -->
    <style name="font_tab_text">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 应用于正文提示区域 -->
    <style name="font_body_hint">
        <item name="android:textColor">@color/color_font_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 应用于Dialog标题区域 -->
    <style name="font_dialog_title">
        <item name="android:textColor">@color/color_font_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 应用于Link蓝色文字 -->
    <style name="font_blue_link">
        <item name="android:textColor">@color/color_font_spec</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 应用于Topbar文字 -->
    <style name="font_topbar_title">
        <item name="android:textColor">@color/color_font_base</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">@color/color_font_spec</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>